#include catppuccin
include dracula
set scroll-step 400
set selection-clipboard clipboard
set recolor false

unmap j
map j navigate next 

unmap k
map k navigate previous

unmap K
map K scroll up

unmap J
map J scroll down

set adjust-open "width"

set incremental-search "true"

set font "JetBrainsMono Nerd Font 10"

set zoom-center "true"

set statusbar-home-tilde "true"

set render-loading "false"

set scroll-page-aware "true"

set scroll-full-overlap 0.01

set dbus-service true
set synctex true
set synctex-editor-command "gvim --remote-silent +%{line} %{input}"
